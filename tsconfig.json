{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist/",
		"sourceMap": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": false,
		"experimentalDecorators": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"src/"
	],
	"exclude": [
		"node_modules/"
	]
}